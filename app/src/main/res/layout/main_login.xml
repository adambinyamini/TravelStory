<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diary_glob"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_titleTravelStory"
        android:layout_marginTop="90dp"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="@string/travel_story"
        android:textColor="#634F36"
        android:textSize="45sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_login"
        android:layout_below="@+id/txt_titleTravelStory"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Log-in"
        android:textColor="#352A26"
        android:textSize="35sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_Email"
        android:layout_below="@+id/txt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            /></com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_Password"
        android:layout_below="@+id/et_Email"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_centerHorizontal="true"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            /></com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_below="@+id/et_Password"
        android:layout_centerHorizontal="true"
        android:onClick="logIn_click"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogIn"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#2E35BB"
        android:onClick="signUp_click"
        android:background="@android:color/transparent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txt_loginFiled"
        android:textSize="15sp"
        android:layout_margin="2dp"
        android:textColor="#FF0F00"
        android:layout_below="@+id/btn_signUp"
        android:layout_centerHorizontal="true"

        />




        />


</RelativeLayout>