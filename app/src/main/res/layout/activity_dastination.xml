<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/travel_the_world"
    tools:context=".Activities.LocationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_titleOfDestination"
        android:textSize="30sp"
        android:textColor="#0BB8A7"
        android:textStyle="bold"
        android:gravity="center"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Write Your Destination"
        android:textColor="@color/colorAccent"
        android:id="@+id/editTxtDes"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/txt_titleOfDestination"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTxtDes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnCoveImage"
        android:text="Cover Image"
        android:textAllCaps="false"
        android:onClick="click_gallery"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/img_gallery"
        android:layout_below="@+id/btnCoveImage"
        android:layout_margin="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="step\n 3/4"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />


    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:id="@+id/btn_next"
        android:src="@drawable/btn_next"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="click_nextToWrite"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:id="@+id/btn_cancel"
        android:src="@drawable/ic_back"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="cancel_onClick"
        />



</RelativeLayout>